{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install && npx prisma generate"
  },
  "deploy": {
    "startCommand": "npx prisma migrate deploy && npx tsx src/index.ts",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 300
  }
}
